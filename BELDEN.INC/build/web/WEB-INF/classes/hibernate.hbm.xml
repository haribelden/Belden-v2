<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class table="login" name="User_Bean.Users">
        <id name="sno" type="int" column="sno">
            <generator class="increment"/>
        </id>
        <property name="uname" column="username"/>
        <property name="pass" column="password"/>
        <property name="fname" column="firstname"/>
        <property name="lname" column="lastname"/>
        <property name="utype" column="usertype"/>
    </class>
</hibernate-mapping>